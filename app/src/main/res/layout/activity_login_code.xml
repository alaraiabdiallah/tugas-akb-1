<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#39a7a7a7"
        android:paddingVertical="65dp"
        android:layout_weight="5">
        <LinearLayout
            android:paddingHorizontal="30dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:orientation="vertical">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                style="@style/HeadingText"
                android:text="Kode Keluarga"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                style="@style/HeadingText"
                android:fontFamily="@font/rubik_regular"
                android:textSize="18sp"
                android:textColor="#333"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="15dp"
                android:text="Ketikkan kode keluarga yang Ayah Bunda miliki disini"/>

            <EditText
                android:id="@+id/kode_keluarga"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:background="@drawable/custom_edit_text1"
                android:ems="10"
                android:layout_marginVertical="12dp"
                android:inputType="text"
                android:maxLength="6"
                android:text="A1B2C3"
                android:fontFamily="@font/rubik_regular"
                android:textAlignment="center"
                android:textAllCaps="true" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/rubik_regular"
                android:textColor="#333"
                android:layout_marginBottom="10dp"
                android:layout_marginTop="15dp"
                android:layout_gravity="center_horizontal"
                android:textAlignment="center"
                android:text="Dengan menekan tombol masuk berarti Anda menyetujui Ketentuan Pengguna dan Kebijakan Data Kami"/>
            <Button
                style="@style/Widget.AppCompat.Button.Borderless"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/custom_button_1"
                android:fontFamily="@font/nunito_bold"
                android:text="Masuk"
                android:textAllCaps="false"
                android:textFontWeight="800"></Button>

        </LinearLayout>

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="#55000000"
        />
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingHorizontal="30dp"
        android:layout_weight="1"
        android:gravity="center">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Belum punya kode keluarga?"
            android:layout_gravity="center_horizontal"
            android:textAlignment="center"
            android:fontFamily="@font/rubik_regular"
            android:textSize="18sp"
            android:layout_marginBottom="20dp"
            />
        <Button
            style="@style/Widget.AppCompat.Button.Borderless"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/custom_button_2"
            android:fontFamily="@font/nunito_bold"
            android:text="@string/regis_btn"
            android:textColor="#ffffff"
            android:textAllCaps="false"
            android:textFontWeight="800"></Button>
    </LinearLayout>

</LinearLayout>